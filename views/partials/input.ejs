<%if(input.config.type=='number'){%>
	<div class="<%=input.config.required?'required':''%> field">
		<label><%=input.config.name%>:</label>
		<div class="field ui left icon input">
			<input name="<%=input.key%>" type="number" placeholder="<%=input.config.description%>" value="<%=input.config.default%>"/>
			<i class="hashtag icon"></i>
		</div>
	</div>
<%}else if(input.config.type=='string'){%>
	<div class="<%=input.config.required?'required':''%> field">
		<label><%=input.config.name%>:</label>
		<div class="field ui left icon input">
			<input name="<%=input.key%>" type="string" placeholder="<%=input.config.description%>" value="<%=input.config.default%>"/>
			<i class="pen icon"></i>
		</div>
	</div>
<%}else if(input.config.type=='file'){%>
	<div class="<%=input.config.required?'required':''%> field">
		<label><%=input.config.name%>:</label>
		<input type="file" name="<%=input.key%>" >
	</div>
<%}%>

